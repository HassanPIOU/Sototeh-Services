{% extends 'layouts/default.twig' %}

{% block body %}
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="page-title-box">
                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active" style="font-size: 1rem">Bienvenue sur le Dashboard</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row">
                    <div class="col-xl-3 col-md-6">
                        <div class="card mini-stat bg-primary text-white">
                            <div class="card-body">
                                <div class="mb-4">
                                    <div class="float-left mini-stat-img mr-4">
                                        <i class="fas fa-user" style="font-size: 30px;"></i>
                                    </div>
                                    <h5 class="font-16 text-uppercase mt-0 text-white-50">Utilisateurs</h5>
                                    <h4 class="font-500">{{ userCount }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card mini-stat bg-primary text-white">
                            <div class="card-body">
                                <div class="mb-4">
                                    <div class="float-left mini-stat-img mr-4">
                                        <div class="float-left mini-stat-img mr-4">
                                            <i class="fas fa-solar-panel" style="font-size: 30px;"></i>
                                        </div>
                                    </div>
                                    <h5 class="font-16 text-uppercase mt-0 text-white-50">Solutions</h5>
                                    <h4 class="font-500">{{ solutionCount }}</h4>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card mini-stat bg-primary text-white">
                            <div class="card-body">
                                <div class="mb-4">
                                    <div class="float-left mini-stat-img mr-4">
                                        <i class="fas fa-hand-holding" style="font-size: 30px;"></i>
                                    </div>
                                    <h5 class="font-16 text-uppercase mt-0 text-white-50">Services</h5>
                                    <h4 class="font-500">{{ serviceCount }}</h4>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card mini-stat bg-primary text-white">
                            <div class="card-body">
                                <div class="mb-4">
                                    <div class="float-left mini-stat-img mr-4">
                                        <i class="fas fa-store" style="font-size: 30px;"></i>
                                    </div>
                                    <h5 class="font-16 text-uppercase mt-0 text-white-50">Produits</h5>
                                    <h4 class="font-500">{{ produitCount }}</h4>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="mt-0 header-title">Statistiques</h4>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <canvas id="bar-chart" height="100"></canvas>
                                    </div>
                                </div>
                                <!-- end row -->
                            </div>
                        </div>
                        <!-- end card -->
                    </div>
                </div>
            </div>
            <!-- container-fluid -->

        </div>
        <!-- content -->

    </div>
{% endblock %}
{% block scripts %}
    <script src="/assets/js/chartjs.js"></script>
    <script src="/pages/dashboard.js"></script>
{% endblock %}