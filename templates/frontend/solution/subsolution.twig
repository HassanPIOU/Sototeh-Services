{% include "frontend/header.twig" %}

<section class="page-header padding" style="background-image:url({{ '/frontend/img/slider-4.jpg' }})">
    <div class="container">
        <div class="page-content text-center">
            <h2>Solutions</h2>
        </div>
    </div>
</section>
<section class="service-section section-2 padding">
    <div class="container">
        <div class="row">
            <h2 class="text-center">{{ solutio.title }}</h2>
        </div>
        <div class="row">

            <div class="row">
                {% if subsolution.count() < 1 %}
                  <div class="col-lg-12">
                      <div class="panof">
                          <p>Aucune Solution disponible pour le moment pour cette cat√©gorie</p>
                          <hr>
                      </div>
                  </div>
                {% endif %}

            <div class="col-lg-12">
                <div class="row">
                    {% for sub in subsolution %}
                    <div class="col-lg-4 col-sm-6 padding-15">
                        <div class="service-item box-shadow padding-15">
                            <div class="service-icon">
                                <i class="fa fa-info-circle"></i>
                            </div>
                            <h3>{{ sub.title }}</h3>
                            <p>{{ sub.description }}</p>
                            <a href="/solution/detail/{{ sub.sub_hash }}" class="read-more">Lire plus</a>
                            <div class="overlay-icon">
                                <i class="fa fa-info-circle"></i>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% include "frontend/footer.twig" %}